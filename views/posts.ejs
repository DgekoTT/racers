<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
<body>
  <style>
    .posts {
      padding-top: 80px;
      min-height: 100vh;
      font-family: 'Montserrat', sans-serif;
      font-size: 20px;
      background: linear-gradient(to bottom, #a4b9be, #3140ca);
      color: #fff;
    }
  
    li {
      list-style: none;
    }
    ul {
      padding: 0;
    }
    a {
      text-decoration: none;
      color: #fff;
    }
    article {
      background-color: rgba(0,0,0,0.4);
      padding: 10px 20px;
      border-radius: 3px;
      margin-bottom: 10px;
    }
    .info {
      display: flex;
      justify-content: space-between;
    }
    h2 a {
      color: aqua;
    }
    .navcat {
    position: absolute;top: 80px;
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    background-color: #333;
}

.cat {
    float: left;
}

.cat a {
    display: line;
    color: white;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
}

.cat a:hover {
    background-color: #111;
}
    
  </style>
<ul class="navcat">
  <li class="cat"><a class="active" href="#home">Formula1</a></li>
  <li class="cat"><a href="#news">Formula2</a></li>
  <li class="cat"><a href="#contact">Formula3</a></li>
</ul>

<body class="posts">
  <%- include('./partials/nav.ejs') %>
    <ul>
      <% if (posts.length) { %>
        <% posts.forEach(({ id, title, date, text, author }) => { %>
          <li>
            <article>
              <h2>
                <a href="/posts/<%= id %>"><%= title %></a>
              </h2>
              <p><%= text %></p>
              <div class="info">
                <span><%= date %></span>
                <span><%= author %></span>
              </div>
            </article>
          </li>
        <% }) %>
      <% } %>
    </ul>
</body>
</html>